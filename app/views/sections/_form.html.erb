	<%= error_messages_for(@section) %>

	<table class="Section form fields">
			<th><%= f.label(:page_id, "Page ID") %></th>
			<td><%#= f.text_field(:page_id) %>
			<%= f.select(:page_id, @pages.map {|s| [s.name, s.id]})%>
			</td>
		</tr>
		<tr>
			<th><%= f.label(:name, "Name") %></th>
			<td><%= @section.name %></td>
		</tr>
		<tr>
			<th><%= f.label(:posistion) %></th>
			<td><%#= @section.posistion %>
				<%= f.select(:posistion, 1..@section_count)%>
			</td>
		</tr>		
		<tr>
			<th><%= f.label(:visible) %></th>
			<td><%= @section.visible ? "true" : "false" %></td>
		</tr>
		<tr>
			<th><%= f.label(:content_type) %>Content Type</th>
			<td><%#= @section.content_type %>
				<%= f.radio_button(:content_type, 'text')%> Text
				<%= f.radio_button(:content_type, 'html')%> HTML
			</td>
		</tr>	
		<tr>
			<th><%= f.label(:content) %>Content</th>
			<td><%#= @section.content %>
				<%= f.text_area(:content, :size => '40x10') %>	
			</td>
		</tr>	
		<tr>
			<th><%= f.label(:created_at) %>Created</th>
			<td><%= @section.created_at %></td>
		</tr>	
		<tr>
			<th><%= f.label(:updated_at) %>Update</th>
			<td><%= @section.updated_at %></td>
		</tr>		
	</table>