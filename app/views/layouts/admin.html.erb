<!DOCTYPE html>
<html>
	<head>
	  <title>Simple CMS | <%= @page_title || "Admin" %></title>
	  <%#= stylesheet_link_tag('application') %> <%# default value for media is media screen%>
	  <%= stylesheet_link_tag('application', :media => "all") %><%# we put the nam of the manifest file%>  <%# we set value for media (to be all)%>
	</head>
	<body>
	<!-- before yield -->
		<div id="header">
			<h1>Simple CMS Admin</h1>
		</div>
		<div id="main">
		<% if !flash[:notice].blank? %>
			<div class="notice">
			<%= flash[:notice] %>
			</div>
		<% end %>
			<div id="content">
				<%= yield %>	
			</div>
		</div>
		<div id="footer">
			<p id="copyright">&copy; Dajia Dim</p>
		</div>		
	<!-- AFTER yield -->
	<%= javascript_include_tag('public')%> <%# we put the nam of the manifest file%>
	
	<%#= javascript_tag("alert('Are you sure?');")%> <%#=inline javascript %>
	
	<%#= javascript_tag do %>
		<%#= alert('Are you sure?'); %>
	<%# end %>
	<%#= inline javascript block code %>
	</body>
</html>

