<% @page_title = "Subjects"%>

<div class="subjects index">
<h2>Subjects</h2>

 <%#= image_tag('plus_sign.png', :size => '11x11', :alt => 'plus sign') %>
<%= link_to(image_tag('plus_sign.png', :size => '11x11', :alt => '+') + " Add new subject", {:action => "new"}, :class => 'action new')%>

<table class="listing" sumary="Subject list">
	<tr class="header">
		<th>&nbsp;</th>
		<th>Subject</th>
		<th>Visible</th>
		<th>Pages</th>
		<th>Actions</th>
	</tr>
	<% @subjects.each do |subject| %>
	<tr>
		<td><%= subject.posistion %></td>
		<td><%= subject.name %></td>
		<td class="center"><%= subject.visible ? "yes" : "no"  %></td>
		<td class="center"><%= subject.pages.size %></td>
		<td class="actions">
			<%= link_to("Show", {:controller => "pages" , :id => subject.id}, :class => 'action show')%>
			<%= link_to("View pages", {:action =>"show", :id => subject.id}, :class => 'action show')%>
			<%= link_to("Edit",{:action =>"edit", :id => subject.id}, :class => 'action edit')%>
			<%= link_to("Delete", {:action =>"delete", :id => subject.id}, :class => 'action delete')%>					
		</td>
		<td><%= subject.id %></td>
	</tr>
	<% end %>
</table>	
</div>